{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
 
}
